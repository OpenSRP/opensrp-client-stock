<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.smartregister.stock.management">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:name=".application.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="org.smartregister.stock.openlmis.view.StockListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name="org.smartregister.stock.openlmis.intent.LotSyncIntentService"
            android:exported="false"/>
        <service android:name="org.smartregister.stock.openlmis.intent.TradeItemSyncIntentService"
            android:exported="false"/>
        <service android:name="org.smartregister.stock.openlmis.intent.ProgramSyncIntentService"
            android:exported="false"/>
        <service android:name="org.smartregister.stock.openlmis.intent.ProgramOrderableSyncIntentService"
            android:exported="false"/>
        <service android:name="org.smartregister.stock.openlmis.intent.ReasonSyncIntentService"
            android:exported="false"/>
        <service android:name="org.smartregister.stock.openlmis.intent.CommodityTypeSyncIntentService"
            android:exported="false"/>
        <service android:name="org.smartregister.stock.openlmis.intent.OrderableSyncIntentService"
            android:exported="false"/>
        <service android:name="org.smartregister.stock.openlmis.intent.TradeItemClassificationSyncIntentService"
            android:exported="false"/>
        <service android:name="org.smartregister.stock.openlmis.intent.DispensableSyncIntentService"
            android:exported="false"/>
        <service android:name="org.smartregister.stock.openlmis.intent.OpenLMISStockSyncIntentService"
            android:exported="false"/>
        <activity
            android:name="org.smartregister.stock.openlmis.view.StockDetailsActivity"
            android:parentActivityName="org.smartregister.stock.openlmis.view.StockListActivity" />
        <receiver android:name=".receiver.OnBootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver android:name=".receiver.OpenLMISAlarmReceiver" />
    </application>
</manifest>
