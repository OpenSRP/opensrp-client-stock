<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/stock_details_margin"
    android:layout_marginStart="@dimen/stock_details_margin"
    android:background="@drawable/horizontal_separator">

    <TextView
        android:id="@+id/lot_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:padding="@dimen/lots_padding"
        android:textColor="@color/stock_list_dark_text" />

    <TextView
        android:id="@+id/stock_on_hand"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:padding="@dimen/lots_padding"
        android:textColor="@color/stock_list_dark_text" />

    <TextView
        android:id="@+id/lot_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:padding="@dimen/lots_padding"
        android:textColor="@color/stock_list_dark_text" />

</LinearLayout>