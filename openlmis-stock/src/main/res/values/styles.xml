<resources>

    <style name="FloatingActionButton" parent="Theme.AppCompat.DayNight">
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="PopupOverlay.Light" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:itemBackground">@android:color/white</item>
    </style>

    <style name="StockDetails.Header" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="Lot.Add.Subtract" parent="android:Widget.TextView">
        <item name="android:textColor">#3596BF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">@dimen/add_subtract_padding</item>
        <item name="android:paddingEnd">@dimen/add_subtract_padding</item>
        <item name="android:background">@drawable/add_subtract_border</item>
        <item name="android:layout_marginStart">@dimen/add_subtract_margin</item>
    </style>

    <style name="Lot.Add.Subtract.StockTake">
        <item name="android:paddingStart">@dimen/add_subtract_padding_stock_take</item>
        <item name="android:paddingEnd">@dimen/add_subtract_padding_stock_take</item>
    </style>

    <style name="Search.AppTheme.AppBarOverlay" parent="AppTheme.AppBarOverlay">
        <item name="android:textColorHint">@color/dark_grey</item>
        <item name="android:editTextColor">@color/stock_list_dark_text</item>
        <item name="colorControlNormal">@color/dark_grey</item>

    </style>

</resources>
