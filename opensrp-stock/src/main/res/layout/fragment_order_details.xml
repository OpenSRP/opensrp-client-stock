<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.smartregister.stock.fragment.OrderDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_orderDetails_orderCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order code here"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/tv_orderDetails_orderedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ordered: "
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/tv_orderDetails_shippedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shipped: "
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/tv_orderDetails_supplyingFacilityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From: "
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/tv_orderDetails_receivingFacilityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To: "
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/tv_orderDetails_processingPeriodStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Processing Period Start Date: "
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/tv_orderDetails_processingPeriodEndDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Processing Period End Date: "
            android:layout_marginBottom="10dp"/>


        <TableLayout
            android:id="@+id/tl_orderDetails_tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stock Item"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ordered"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shipped"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Doses"/>

            </TableRow>

        </TableLayout>

    </LinearLayout>

</FrameLayout>
